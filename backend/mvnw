#!/bin/sh
# Maven Wrapper script - downloads wrapper jar if missing, then runs Maven

set -e

MAVEN_PROJECTBASEDIR="${MAVEN_BASEDIR:-$(cd "$(dirname "$0")" && pwd)}"
WRAPPER_JAR="$MAVEN_PROJECTBASEDIR/.mvn/wrapper/maven-wrapper.jar"
if [ -z "$JAVA_HOME" ]; then
  JAVA_CMD=$(command -v java 2>/dev/null)
  [ -z "$JAVA_CMD" ] && echo "JAVA_HOME is not set and no 'java' found in PATH" && exit 1
else
  JAVA_CMD="$JAVA_HOME/bin/java"
  [ ! -x "$JAVA_CMD" ] && echo "JAVA_HOME is set but $JAVA_CMD is not executable" && exit 1
fi

if [ ! -f "$WRAPPER_JAR" ]; then
  WRAPPER_URL="https://repo.maven.apache.org/maven2/org/apache/maven/wrapper/maven-wrapper/3.3.2/maven-wrapper-3.3.2.jar"
  mkdir -p "$(dirname "$WRAPPER_JAR")"
  if command -v curl >/dev/null 2>&1; then
    curl -sL -o "$WRAPPER_JAR" "$WRAPPER_URL"
  elif command -v wget >/dev/null 2>&1; then
    wget -q -O "$WRAPPER_JAR" "$WRAPPER_URL"
  else
    echo "Could not download Maven Wrapper. Install curl or wget, or run: mvn wrapper:wrapper"
    exit 1
  fi
fi

exec "$JAVA_CMD" \
  -classpath "$WRAPPER_JAR" \
  "-Dmaven.multiModuleProjectDirectory=$MAVEN_PROJECTBASEDIR" \
  org.apache.maven.wrapper.MavenWrapperMain "$@"
